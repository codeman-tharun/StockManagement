<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="10dp"
    tools:context=".purchases.PurchaseCreate">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:elevation="4dp">
            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Purchase Creation"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold" />
        </androidx.appcompat.widget.Toolbar>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:gravity="center">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TableRow>
                    <TextView
                        android:text="Product Name:"
                        android:textSize="16sp"
                        android:gravity="end"/>
                    <AutoCompleteTextView
                        android:id="@+id/AET_Product"
                        android:layout_width="wrap_content"
                        android:layout_height="50sp"
                        android:hint="Enter the Product Name"
                        android:layout_marginBottom="10dp"/>
                </TableRow>

                <TableRow>
                    <TextView
                        android:text="Stock added Date:"
                        android:textSize="16sp"
                        android:gravity="end"/>
                    <EditText
                        android:id="@+id/ET_NewStockDate"
                        android:layout_width="wrap_content"
                        android:layout_height="50sp"
                        android:hint="DD/MM/YYYY"
                        android:inputType="date"
                        android:layout_marginBottom="10dp" />
                </TableRow>

                <TableRow>
                    <TextView
                        android:text="Cost Rs."
                        android:textSize="16sp"
                        android:gravity="end"/>
                    <EditText
                        android:id="@+id/ET_NewStockCost"
                        android:layout_width="wrap_content"
                        android:layout_height="50sp"
                        android:hint="Cost of One Unit of Stock"
                        android:inputType="number"
                        android:layout_marginBottom="10dp" />
                </TableRow>

                <TableRow>
                    <TextView
                        android:text="Unit Count:"
                        android:textSize="16sp"
                        android:gravity="end"/>
                    <EditText
                        android:id="@+id/ET_StockCount"
                        android:layout_width="wrap_content"
                        android:layout_height="50sp"
                        android:hint="Enter the count stock"
                        android:layout_marginBottom="10dp"
                        android:inputType="number" />
                </TableRow>

                <Button
                    android:id="@+id/Btn_ProductStockSave"
                    android:layout_width="100sp"
                    android:layout_height="50sp"
                    android:text="Save"
                    android:textSize="24sp" />
            </TableLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
