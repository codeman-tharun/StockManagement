<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/main"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".products.ProductView"
android:orientation="vertical"
android:layout_margin="20dp">

<androidx.appcompat.widget.Toolbar
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="?attr/colorPrimary"
    android:elevation="4dp">
    <TextView
        android:id="@+id/toolbar_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="Product Details"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold" />
</androidx.appcompat.widget.Toolbar>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">
    <TableLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:gravity="center" >
        <TableRow>
            <TextView
                android:text="Product ID:"
                android:textSize="16sp"
                android:gravity="end"/>
            <TextView
                android:id="@+id/TV_ProductID"
                android:layout_height="50sp"
                android:layout_width="wrap_content"
                android:text="0"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"/>
        </TableRow>
        <TableRow>
            <TextView
                android:text="Name:"
                android:textSize="16sp"
                android:gravity="end"/>
            <TextView
                android:id="@+id/TV_ProductName"
                android:layout_height="50sp"
                android:layout_width="wrap_content"
                android:text="none"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"/>
        </TableRow>
        <TableRow>
            <TextView
                android:text="Measuring Unit:"
                android:textSize="16sp"
                android:gravity="end"/>
            <TextView
                android:id="@+id/TV_ProductMeasureunit"
                android:layout_height="50sp"
                android:layout_width="wrap_content"
                android:text="none"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"/>
        </TableRow>
        <TableRow>
            <TextView
                android:text="Stock Count:"
                android:textSize="16sp"
                android:gravity="end"/>
            <TextView
                android:id="@+id/TV_ProductCount"
                android:layout_height="50sp"
                android:layout_width="wrap_content"
                android:text="0"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/holo_red_dark"
                android:layout_marginBottom="10dp"/>
        </TableRow>
        <TableRow>
            <TextView
                android:text="Latest Price:"
                android:textSize="16sp"
                android:gravity="end"/>
            <TextView
                android:id="@+id/TV_ProductPrice"
                android:layout_height="50sp"
                android:layout_width="wrap_content"
                android:text="Rs. 0"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/holo_red_dark"
                android:layout_marginBottom="10dp"/>
        </TableRow>
        <TableRow>
            <TextView
                android:text="Created Date:"
                android:textSize="16sp"
                android:gravity="end"/>
            <TextView
                android:id="@+id/TV_ProductCreDate"
                android:layout_height="50sp"
                android:layout_width="wrap_content"
                android:text="00-00-0000"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"/>
        </TableRow>
        <Button
            android:id="@+id/Btn_EditProduct"
            android:layout_width="wrap_content"
            android:text="Edit the Product Details"/>
    </TableLayout>
</LinearLayout>
</LinearLayout>