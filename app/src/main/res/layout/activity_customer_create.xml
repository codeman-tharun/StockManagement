<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="20dp"
    tools:context=".customers.CustomerCreate">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:elevation="4dp">

            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Customer Creation"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold" />
        </androidx.appcompat.widget.Toolbar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:orientation="vertical">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TableRow>
                    <TextView
                        android:text="Name:"
                        android:textSize="16sp"
                        android:gravity="end"/>
                    <EditText
                        android:id="@+id/ET_CustomerName"
                        android:layout_width="295dp"
                        android:layout_height="50sp"
                        android:hint="Enter the Customer Name"
                        android:maxLength="60"
                        android:layout_marginBottom="10dp"/>
                </TableRow>

                <TableRow>
                    <TextView
                        android:text="Phone No:"
                        android:textSize="16sp"
                        android:gravity="end"/>
                    <EditText
                        android:id="@+id/ET_CustomerNo"
                        android:layout_width="295dp"
                        android:layout_height="50sp"
                        android:hint="Enter Contact Number"
                        android:inputType="phone"
                        android:maxLength="10"
                        android:layout_marginBottom="10dp"/>
                </TableRow>

                <TableRow>
                    <TextView
                        android:text="Address:"
                        android:textSize="16sp"
                        android:gravity="end"/>
                    <EditText
                        android:id="@+id/ET_CustomerAddress"
                        android:layout_width="295dp"
                        android:layout_height="50sp"
                        android:hint="Enter Address of Customer"
                        android:layout_marginBottom="10dp"/>
                </TableRow>

                <Button
                    android:id="@+id/Btn_SaveCustomer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Save Customer"/>
            </TableLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
