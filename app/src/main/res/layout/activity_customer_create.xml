<?xml version="1.0" encoding="utf-8"?>
<TableLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/main"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".CustomerCreate"
android:gravity="center"
android:layout_margin="20dp">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="New Customer Creation:-"
    android:textStyle="bold"
    android:textSize="24sp"
    android:layout_marginBottom="20sp"/>
<TableRow>
    <TextView
        android:text="Name:"
        android:textSize="16sp"
        android:gravity="end"/>
    <EditText
        android:id="@+id/ET_CustomerName"
        android:layout_width="295dp"
        android:layout_height="50sp"
        android:hint="Enter the Product Name"
        android:layout_marginBottom="10dp"/>
</TableRow>
<TableRow>
    <TextView
        android:text="Phone No:"
        android:textSize="16sp"
        android:gravity="end"/>
    <EditText
        android:id="@+id/ET_CustomerNo"
        android:layout_width="295dp"
        android:layout_height="50sp"
        android:hint="Enter Contact Number"
        android:layout_marginBottom="10dp"/>
</TableRow>
<TableRow>
    <TextView
        android:text="Address:"
        android:textSize="16sp"
        android:gravity="end"/>
    <EditText
        android:id="@+id/ET_CustomerAddress"
        android:layout_width="295dp"
        android:layout_height="50sp"
        android:hint="Enter Address of Customer"
        android:layout_marginBottom="10dp"/>
</TableRow>

<Button
    android:id="@+id/Btn_SaveCustomer"
    android:layout_width="wrap_content"
    android:text="Save Customer"/>


</TableLayout>